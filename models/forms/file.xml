<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="general" addfieldpath="/plugins/system/mvcoverride/models/fields">
        <field name="FilePath" type="text" label="COM_RSFILES_FILE_PATH" description="COM_RSFILES_FILE_PATH_DESC"
size="70" class="input-xxlarge" readonly="true"/>
        <field name="FileName" type="text" label="COM_RSFILES_FILE_NAME" description="COM_RSFILES_FILE_NAME_DESC"
class="input-xlarge"/>
        <field name="tags" type="sql" sql_select="id,title" sql_from="#__rsfiles_tags" key_field="id"
value_field="title" multiple="multiple" label="COM_RSFILES_FILE_TAGS"
description="COM_RSFILES_FILE_TAGS_DESC"/>
        <field name="DownloadName" type="text" label="COM_RSFILES_FILE_DOWNLOAD_NAME"
description="COM_RSFILES_FILE_DOWNLOAD_NAME_DESC" size="50" class="input-xlarge"/>
        <field name="published" type="list" label="COM_RSFILES_FILE_PUBLISHED"
description="COM_RSFILES_FILE_PUBLISHED_DESC" default="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
        <field name="publish_down" type="calendar" label="COM_RSFILES_FILE_PUBLISH_DOWN"
description="COM_RSFILES_FILE_PUBLISH_DOWN_DESC" class="input-large" size="22" format="%Y-%m-%d %H:%M:%S"
filter="user_utc"/>
        <field name="DateAdded" type="calendar" label="COM_RSFILES_FILE_DATE_ADDED"
description="COM_RSFILES_FILE_DATE_ADDED_DESC" class="input-large" size="22" format="%Y-%m-%d %H:%M:%S"
filter="user_utc"/>
        <field name="FileStatistics" type="radio" class="btn-group btn-group-yesno"
               label="COM_RSFILES_FILE_FILE_STATISTICS" description="COM_RSFILES_FILE_FILE_STATISTICS_DESC" default="0">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="IdUser" type="user" label="COM_RSFILES_FILE_USER" description="COM_RSFILES_FILE_USER_DESC"/>
        <field name="FileVersion" type="text" label="COM_RSFILES_FILE_FILE_VERSION"
description="COM_RSFILES_FILE_FILE_VERSION_DESC" size="10" class="input-small" default=""/>
        <field name="FileDisplayAsNew" type="radio" label="Display document as new" default="1" class="btn-group"
description="When unchecked the file will not display the list new files module">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="IdLicense" type="licenses" label="COM_RSFILES_FILE_LICENSE"
description="COM_RSFILES_FILE_LICENSE_DESC" class="input-large"/>
        <field name="DownloadMethod" type="list" label="COM_RSFILES_FILE_DOWNLOAD_METHOD"
description="COM_RSFILES_FILE_DOWNLOAD_METHOD_DESC" default="0">
            <option value="0">COM_RSFILES_FILE_DOWNLOAD_METHOD_0</option>
            <option value="1">COM_RSFILES_FILE_DOWNLOAD_METHOD_1</option>
        </field>
        <field name="FileStatus" type="list" label="File Status" default="" class="validate-relatedfile">
            <option value="">No Status</option>
            <option value="0">Expired</option>
            <option value="1">Renewed</option>
            <option value="2">Revoked</option>
            <option value="5">Removed</option>
            <option value="3">Catch - All</option>
            <option value="4">Date Only</option>
        </field>
        <field name="FileRelatedToStatus" type="relatedfiles" class="input-xxlarge" label="Related File"
description="COM_RSFILES_RULE_FOLDER_DESC" size="70" default="Related File"/>
        <field name="DateRelatedToStatus" type="calendar" label="Date" showtime="false" default=""
weeknumbers="false" format="%d/%m/%Y" onchange="Joomla.calendarDateSet();"
class="dateRelatedToStatusClass"/>
        <field name="DownloadLimit" type="text" label="COM_RSFILES_FILE_DOWNLOAD_LIMIT"
description="COM_RSFILES_FILE_DOWNLOAD_LIMIT_DESC" size="10" class="input-small" default=""/>
        <field name="show_preview" type="radio" class="btn-group btn-group-yesno" label="COM_RSFILES_FILE_SHOW_PREVIEW"
description="COM_RSFILES_FILE_SHOW_PREVIEW_DESC" default="1">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="FileDescription" type="editor" class="inputbox" label="COM_RSFILES_FILE_DESCRIPTION"
description="COM_RSFILES_FILE_DESCRIPTION_DESC" filter="JComponentHelper::filterText" buttons="true"
hide="rscomments,readmore,pagebreak" width="90%"/>
        <field name="icon" type="hidden"/>
    </fieldset>

    <fieldset name="permissions">
        <field name="CanView" type="groups" label="COM_RSFILES_FILE_CAN_VIEW"
description="COM_RSFILES_FILE_CAN_VIEW_DESC" class="input-large" multiple="multiple"/>
        <field name="CanDownload" type="groups" label="COM_RSFILES_FILE_CAN_DOWNLOAD"
description="COM_RSFILES_FILE_CAN_DOWNLOAD_DESC" class="input-large" multiple="multiple"/>
        <field name="CanEdit" type="groups" label="COM_RSFILES_FILE_CAN_EDIT"
description="COM_RSFILES_FILE_CAN_EDIT_DESC" class="input-large" multiple="multiple"/>
        <field name="CanCreate" type="groups" label="COM_RSFILES_FILE_CAN_CREATE"
description="COM_RSFILES_FILE_CAN_CREATE_DESC" class="input-large" multiple="multiple"/>
        <field name="CanUpload" type="groups" label="COM_RSFILES_FILE_CAN_UPLOAD"
description="COM_RSFILES_FILE_CAN_UPLOAD_DESC" class="input-large" multiple="multiple"/>
        <field name="CanDelete" type="groups" label="COM_RSFILES_FILE_CAN_DELETE"
description="COM_RSFILES_FILE_CAN_DELETE_DESC" class="input-large" multiple="multiple"/>
    </fieldset>

    <fieldset name="metadata">
        <field name="metatitle" type="text" label="COM_RSFILES_FILE_METATITLE" size="50" class="input-xlarge"/>
        <field name="metadescription" type="textarea" label="COM_RSFILES_FILE_METADESCRIPTION" rows="10" cols="60"
class="input-xxlarge"/>
        <field name="metakeywords" type="text" label="COM_RSFILES_FILE_METAKEYWORDS" rows="10" cols="60"
class="input-xxlarge"/>
    </fieldset>

    <field name="IdFile" type="hidden" label="" description="" default="0" readonly="true"/>
    <field name="FileType" type="hidden" label="" description="" default="0" readonly="true"/>
    <field name="FileParent" type="hidden" label="" description="" default="" readonly="true"/>
    <field name="ScreenshotsTags" type="rsgallery" multiple="multiple" label="COM_RSFILES_GALLERY_TAGS"/>
    <field name="preview" type="hidden"/>
    <field name="poster" type="hidden"/>
</form>
